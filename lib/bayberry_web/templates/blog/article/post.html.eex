<div class="container">
  <p>
    <h4 class='display-4'>
      <%= @post.title %>
    </h4>
    <div class='blockquote-footer text-muted'>
      <%= @post.author.user.name %>,
      <%= Timex.format!(@post.inserted_at, "%A, %e %B %Y", :strftime) %>
    </div>
  </p>

  <div class='row'>
    <div class='lead col-md-10'>
      <%= Phoenix.HTML.raw(@post.body) %>
    </div>
  </div>

  <hr/>
</div>
